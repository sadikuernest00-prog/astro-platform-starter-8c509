---
const featuresBorrower = [
  "Reach real people willing to lend, not just banks.",
  "Borrow in normal money or crypto.",
  "Explain your situation in your own words.",
  "Negotiate repayment terms directly with lenders.",
];

const featuresLender = [
  "See real people and projects, not just numbers.",
  "Lend using bank transfer or crypto.",
  "Set your own interest rate and conditions.",
  "Chat with borrowers before you commit.",
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Amicbridge – Borrow, Lend & Invest in Crypto</title>
    <meta
      name="description"
      content="Amicbridge lets you borrow, lend, and invest in crypto and tokenized assets while keeping control of your own wallet."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
      :root {
        color-scheme: dark;
        --bg: #020617;
        --accent: #22c55e;
        --text: #e5e7eb;
        --muted: #9ca3af;
        --border: #1f2933;
        --card: rgba(15, 23, 42, 0.9);
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "SF Pro Text",
          sans-serif;
        background: radial-gradient(circle at top, #0f172a 0, #020617 55%);
        color: var(--text);
      }

      .shell {
        max-width: 1100px;
        margin: 0 auto;
        padding: 2.5rem 1.5rem 4rem;
      }

      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
      }

      .logo {
        display: flex;
        gap: 0.6rem;
        align-items: center;
        font-weight: 600;
        letter-spacing: 0.04em;
      }

      .logo-mark {
        width: 26px;
        height: 26px;
        border-radius: 999px;
        background: radial-gradient(circle at 30% 20%, #4ade80, #16a34a);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        color: #022c22;
      }

      nav a {
        font-size: 0.9rem;
        color: var(--muted);
        text-decoration: none;
        margin-left: 1.2rem;
      }

      nav a.button {
        color: #022c22;
        background: var(--accent);
        padding: 0.45rem 0.95rem;
        border-radius: 999px;
        font-weight: 500;
      }

      h1 {
        font-size: clamp(2.3rem, 3vw + 1.2rem, 3.1rem);
        line-height: 1.05;
        margin-bottom: 1rem;
      }

      h1 span {
        color: var(--accent);
      }

      h2 {
        margin: 0 0 0.7rem;
        font-size: 1.3rem;
      }

      p {
        margin: 0.25rem 0;
      }

      .hero-text {
        max-width: 40rem;
        color: var(--muted);
      }

      .cta-row {
        display: flex;
        flex-wrap: wrap;
        gap: 0.8rem;
        margin-top: 1.4rem;
      }

      .btn {
        border-radius: 999px;
        padding: 0.6rem 1.4rem;
        border: 1px solid transparent;
        font-size: 0.95rem;
        font-weight: 500;
        cursor: pointer;
        background: transparent;
        color: var(--text);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }

      .btn-primary {
        background: var(--accent);
        color: #022c22;
      }

      .btn-outline {
        border-color: var(--border);
      }

      .card {
        background: var(--card);
        border-radius: 1.2rem;
        padding: 1.5rem;
        border: 1px solid rgba(148, 163, 184, 0.18);
      }

      .grid-2 {
        display: grid;
        gap: 1.5rem;
        margin-top: 2.5rem;
      }

      .grid-3 {
        display: grid;
        gap: 1.5rem;
        margin-top: 2.5rem;
      }

      @media (min-width: 700px) {
        .grid-2 {
          grid-template-columns: repeat(2, minmax(0, 1fr));
        }
      }

      @media (min-width: 900px) {
        .grid-3 {
          grid-template-columns: repeat(3, minmax(0, 1fr));
        }
      }

      .price-box {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        margin-top: 0.5rem;
      }

      .price-item {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
        padding-bottom: 0.3rem;
        font-size: 0.9rem;
      }

      .token-grid {
        display: grid;
        gap: 1rem;
        margin-top: 1rem;
      }

      @media (min-width: 700px) {
        .token-grid {
          grid-template-columns: repeat(4, minmax(0, 1fr));
        }
      }

      .token-card {
        border-radius: 0.9rem;
        padding: 1rem;
        border: 1px solid rgba(148, 163, 184, 0.25);
        background: rgba(4, 16, 34, 0.9);
      }

      .token-card strong {
        color: var(--accent);
      }

      .tiny {
        font-size: 0.8rem;
        color: var(--muted);
      }

      /* forms */
      .form-grid {
        display: grid;
        gap: 0.8rem;
      }

      @media (min-width: 700px) {
        .form-grid-2 {
          grid-template-columns: repeat(2, minmax(0, 1fr));
        }
      }

      .input,
      .textarea,
      select {
        width: 100%;
        padding: 0.55rem 0.7rem;
        border-radius: 0.55rem;
        border: 1px solid rgba(148, 163, 184, 0.5);
        background: rgba(15, 23, 42, 0.85);
        color: var(--text);
        font-size: 0.9rem;
      }

      .textarea {
        resize: vertical;
      }

      .input::placeholder,
      .textarea::placeholder {
        color: var(--muted);
      }

      label.checkbox {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.82rem;
        color: var(--muted);
        margin-top: 0.4rem;
      }

      footer {
        margin-top: 3rem;
        font-size: 0.75rem;
        color: var(--muted);
        border-top: 1px solid rgba(30, 64, 175, 0.3);
        padding-top: 1rem;
      }

      #walletAddress {
        margin-top: 0.5rem;
        font-size: 0.85rem;
        color: var(--accent);
        word-break: break-all;
      }
    </style>
  </head>

  <body>
    <div class="shell">
      <header>
        <div class="logo">
          <div class="logo-mark">A</div>
          <span>Amicbridge</span>
        </div>
        <nav>
          <a href="#invest">Invest</a>
          <a href="#how">How it works</a>
          <a href="#borrow">Borrow</a>
          <a href="#lend">Lend</a>
          <a href="#contact">Contact</a>
          <a class="button" href="#start">Get started</a>
        </nav>
      </header>

      <!-- HERO -->
      <section id="start" style="margin-bottom: 2.5rem;">
        <h1>
          Borrow. Lend. <span>Invest in Crypto.</span>
        </h1>
        <p class="hero-text">
          Amicbridge lets you borrow money, lend to real people, or invest your
          crypto safely through smart-contract vaults and tokenized assets. You
          always keep control of your own wallet.
        </p>
        <div class="cta-row">
          <a class="btn btn-primary" href="#invest">Invest in crypto</a>
          <a class="btn btn-outline" href="#borrow">Borrow crypto</a>
        </div>
      </section>

      <!-- WALLET + PRICES -->
      <section class="grid-2">
        <div class="card">
          <h2>Connect Wallet</h2>
          <p class="tiny">
            Connect MetaMask or any Web3 wallet to access crypto investing,
            tokenized assets, and stablecoin transactions.
          </p>
          <button id="connectBtn" class="btn btn-primary" style="margin-top: 1rem;">
            Connect Wallet
          </button>
          <div id="walletAddress"></div>
        </div>

        <div class="card">
          <h2>Live Asset Prices</h2>
          <div class="price-box">
            <div class="price-item">
              <span>Bitcoin (BTC)</span>
              <span id="p-btc">--</span>
            </div>
            <div class="price-item">
              <span>Ethereum (ETH)</span>
              <span id="p-eth">--</span>
            </div>
            <div class="price-item">
              <span>Gold (XAU)</span>
              <span id="p-gold">--</span>
            </div>
            <div class="price-item">
              <span>Silver (XAG)</span>
              <span id="p-silver">--</span>
            </div>
          </div>
          <p class="tiny">
            Prices update automatically every 60 seconds.
          </p>
        </div>
      </section>

      <!-- INVEST + SHARIA -->
      <section id="invest" class="grid-2">
        <div class="card">
          <h2>Invest in Crypto Assets</h2>
          <p class="tiny">
            Access curated crypto markets, stablecoins, tokenized commodities,
            and other digital assets. All investments run through smart
            contracts and your own wallet – Amicbridge never holds your keys.
          </p>
          <p style="margin-top: 0.9rem; font-size: 0.9rem;">Supported assets:</p>
          <ul
            style="font-size: 0.9rem; color: var(--muted); margin-left: 1.2rem; margin-bottom: 0.6rem;"
          >
            <li>Bitcoin (BTC)</li>
            <li>Ethereum (ETH)</li>
            <li>USDT / USDC stablecoins</li>
            <li>DAI (decentralized stablecoin)</li>
            <li>Tokenized gold (XAU)</li>
            <li>Tokenized silver (XAG)</li>
          </ul>
          <a href="#vaults" class="btn btn-primary" style="margin-top: 0.6rem;">
            View investment vault ideas
          </a>
        </div>

        <div class="card">
          <h2>Sharia-Filtered Investments</h2>
          <p class="tiny">
            Amicbridge can highlight investments that follow common Islamic
            finance principles:
          </p>
          <ul
            style="font-size: 0.9rem; color: var(--muted); margin-left: 1.2rem; margin-bottom: 0.6rem;"
          >
            <li>Asset-backed value instead of pure speculation</li>
            <li>No interest-based (riba) lending in profit-sharing products</li>
            <li>Transparent cost and profit structures</li>
            <li>No gambling or highly speculative derivatives</li>
          </ul>
          <p class="tiny">
            Note: Full Sharia compliance requires qualified scholars. This site
            offers a “sharia-filtered” view only, not a formal certification.
          </p>
        </div>
      </section>

      <!-- TOKENIZED ASSETS -->
      <section id="vaults" style="margin-top: 3rem;">
        <div class="card">
          <h2>Tokenized Asset Marketplace (Concept)</h2>
          <p class="tiny">
            The next step for Amicbridge is a marketplace of tokenized assets
            where you can allocate capital directly into real-world backed
            projects.
          </p>
          <div class="token-grid">
            <div class="token-card">
              <strong>Tokenized Gold (XAU)</strong>
              <p class="tiny">
                On-chain exposure to physical gold held with trusted custodians.
              </p>
            </div>
            <div class="token-card">
              <strong>Tokenized Silver (XAG)</strong>
              <p class="tiny">
                Silver-backed tokens for diversification and inflation hedging.
              </p>
            </div>
            <div class="token-card">
              <strong>Real Estate Slots</strong>
              <p class="tiny">
                Fractional share tokens linked to property-backed investments.
              </p>
            </div>
            <div class="token-card">
              <strong>Sukuk-Style Deals</strong>
              <p class="tiny">
                Profit-sharing instruments structured to follow Islamic finance
                principles.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- HOW IT WORKS -->
      <section id="how" class="grid-2" style="margin-top: 3rem;">
        <div class="card">
          <h2>For borrowers</h2>
          <ul
            style="font-size: 0.9rem; color: var(--muted); margin-left: 1.2rem; margin-top: 0.5rem;"
          >
            {featuresBorrower.map((item) => <li>{item}</li>)}
          </ul>
        </div>
        <div class="card">
          <h2>For lenders</h2>
          <ul
            style="font-size: 0.9rem; color: var(--muted); margin-left: 1.2rem; margin-top: 0.5rem;"
          >
            {featuresLender.map((item) => <li>{item}</li>)}
          </ul>
        </div>
      </section>

      <!-- BORROW FORM (NETLIFY) -->
      <section id="borrow" style="margin-top: 3rem;">
        <div class="card">
          <h2>Borrow money</h2>
          <p class="tiny">
            Fill in your details and we’ll receive your request. You can use
            normal money (bank transfer) or crypto. Payments always happen
            directly between you and the lender using your own bank or wallet.
          </p>

          <form
            name="borrow"
            method="POST"
            data-netlify="true"
            class="form-grid form-grid-2"
            style="margin-top: 1rem;"
          >
            <input type="hidden" name="form-name" value="borrow" />

            <div class="form-grid form-grid-2">
              <input
                class="input"
                type="text"
                name="name"
                placeholder="Your name"
                required
              />
              <input
                class="input"
                type="email"
                name="email"
                placeholder="Email"
                required
              />
            </div>

            <div class="form-grid form-grid-2">
              <input
                class="input"
                type="text"
                name="phone"
                placeholder="Phone number"
                required
              />
              <input
                class="input"
                type="number"
                name="amount"
                placeholder="Amount you want to borrow (e.g. 20000)"
                required
              />
            </div>

            <div class="form-grid form-grid-2">
              <select class="input" name="payment_method" required>
                <option value="">Preferred payment method</option>
                <option value="bank">Bank transfer (fiat)</option>
                <option value="crypto">Crypto</option>
                <option value="either">Either / open to both</option>
              </select>
              <input
                class="input"
                type="text"
                name="crypto_details"
                placeholder="If crypto: coin + network (e.g. USDT on Ethereum)"
              />
            </div>

            <textarea
              class="textarea"
              name="reason"
              placeholder="Tell a bit about why you need this loan."
              rows="4"
              required
            ></textarea>

            <label class="checkbox">
              <input type="checkbox" name="id_verification" />
              I agree to verify my identity to the other party if needed.
            </label>

            <button type="submit" class="btn btn-primary" style="margin-top: 0.5rem;">
              Send borrow request
            </button>
          </form>
        </div>
      </section>

      <!-- LEND FORM (NETLIFY) -->
      <section id="lend" style="margin-top: 3rem;">
        <div class="card">
          <h2>Lend money</h2>
          <p class="tiny">
            Tell us how much you want to lend, how you prefer to be paid
            (bank/crypto), and your typical terms. We never move your money –
            you decide every agreement directly with the borrower.
          </p>

          <form
            name="lend"
            method="POST"
            data-netlify="true"
            class="form-grid form-grid-2"
            style="margin-top: 1rem;"
          >
            <input type="hidden" name="form-name" value="lend" />

            <div class="form-grid form-grid-2">
              <input
                class="input"
                type="text"
                name="name"
                placeholder="Your name"
                required
              />
              <input
                class="input"
                type="email"
                name="email"
                placeholder="Email"
                required
              />
            </div>

            <div class="form-grid form-grid-2">
              <input
                class="input"
                type="text"
                name="phone"
                placeholder="Phone number"
                required
              />
              <input
                class="input"
                type="number"
                name="amount"
                placeholder="Amount you want to lend (e.g. 50000)"
                required
              />
            </div>

            <div class="form-grid form-grid-2">
              <select class="input" name="payment_method" required>
                <option value="">Preferred payment method</option>
                <option value="bank">Bank transfer (fiat)</option>
                <option value="crypto">Crypto</option>
                <option value="either">Either / open to both</option>
              </select>
              <input
                class="input"
                type="text"
                name="crypto_details"
                placeholder="If crypto: coin + network (e.g. DAI on Arbitrum)"
              />
            </div>

            <div class="form-grid form-grid-2">
              <input
                class="input"
                type="number"
                step="0.1"
                name="interest"
                placeholder="Desired interest / profit rate (%)"
              />
              <input
                class="input"
                type="text"
                name="duration"
                placeholder="Typical duration (e.g. 6–24 months)"
              />
            </div>

            <textarea
              class="textarea"
              name="notes"
              placeholder="Anything else we should know about your lending preferences."
              rows="4"
            ></textarea>

            <label class="checkbox">
              <input type="checkbox" name="id_verification" />
              I agree to verify my identity to the other party if needed.
            </label>

            <button type="submit" class="btn btn-primary" style="margin-top: 0.5rem;">
              Send lending offer
            </button>
          </form>
        </div>
      </section>

      <!-- CONTACT -->
      <section id="contact" style="margin-top: 3rem;">
        <div class="card">
          <h2>Contact</h2>
          <p><strong>CEO:</strong> Robert</p>
          <p><strong>Address:</strong> Oslo, Norway</p>
          <p><strong>Phone:</strong> 929 28 373</p>
          <p>
            <strong>Email:</strong>
            <a
              href="mailto:robertamicolsen@gmail.com"
              style="color: var(--accent); text-decoration: none;"
            >
              robertamicolsen@gmail.com
            </a>
          </p>
        </div>
      </section>

      <footer>
        <p>
          <strong>Important:</strong> Amicbridge is a connection and discovery
          platform. We do not hold user funds or guarantee repayments or
          investment returns. All payments and investments are done directly
          from your own bank or wallet. Crypto and lending carry risk – always
          do your own checks and consult a professional if needed before
          lending, borrowing, or investing.
        </p>
      </footer>
    </div>

    <script>
      // WALLET CONNECT
      const connectBtn = document.getElementById("connectBtn");
      const walletDisplay = document.getElementById("walletAddress");

      if (connectBtn) {
        connectBtn.addEventListener("click", async () => {
          if (!window.ethereum) {
            alert("No Web3 wallet found. Please install MetaMask or similar.");
            return;
          }
          try {
            const accounts = await window.ethereum.request({
              method: "eth_requestAccounts",
            });
            walletDisplay.textContent = "Connected: " + accounts[0];
          } catch (err) {
            console.error(err);
            alert("Wallet connection cancelled.");
          }
        });
      }

      // PRICE FETCH
      async function loadPrices() {
        try {
          // Crypto prices (CoinGecko)
          const cryptoUrl =
            "https://api.coingecko.com/api/v3/simple/price?ids=bitcoin,ethereum&vs_currencies=usd";
          const cryptoRes = await fetch(cryptoUrl);
          const cryptoData = await cryptoRes.json();

          document.getElementById("p-btc").textContent =
            "$" + cryptoData.bitcoin.usd.toLocaleString();
          document.getElementById("p-eth").textContent =
            "$" + cryptoData.ethereum.usd.toLocaleString();

          // Metals (MetalPriceAPI demo key – replace with your own)
          const metalsUrl =
            "https://api.metalpriceapi.com/v1/latest?api_key=demo&base=USD&symbols=XAU,XAG";
          const metalRes = await fetch(metalsUrl);
          const metalData = await metalRes.json();

          if (metalData && metalData.rates) {
            const goldUsd = 1 / metalData.rates.XAU;
            const silverUsd = 1 / metalData.rates.XAG;
            document.getElementById("p-gold").textContent =
              "$" + goldUsd.toFixed(2);
            document.getElementById("p-silver").textContent =
              "$" + silverUsd.toFixed(2);
          }
        } catch (err) {
          console.error("Price API error:", err);
        }
      }

      loadPrices();
      setInterval(loadPrices, 60000);
    </script>
  </body>
</html>
